<html>
<head>
    <style>
        .bar {
            fill: pink;
        }

        .grapheContainer {
            margin: auto;
        }

        .title {
            margin-left: 800px;
            color: black;
            font-size: larger;
        }

        .bar:hover {
            fill: black;
        }
        .BarGraphe {
            cursor: pointer;
        }

            .BarGraphe > text {
                fill-opacity: 0;
                transition: 0.3s;
            }

            .BarGraphe:hover > text {
                fill-opacity: 1;
            }
                        img{
                width:100px;
                height:100px;
            }
    </style>
    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script>
        function NishanthiniW(name, type) {

            document.getElementById('svgman').innerHTML = " ";
            var svg = d3.select("svg"),
margin = 200,
width = svg.attr("width") - margin,
height = svg.attr("height") - margin

            svg.append("text")
               .attr("transform", "translate(100,0)")
               .attr("x", 50)
               .attr("y", 50)


            var xScale = d3.scaleBand().range([0, width]).padding(0.4),
                yScale = d3.scaleLinear().range([height, 0]);

            var g = svg.append("g")
                       .attr("transform", "translate(" + 100 + "," + 100 + ")");

            d3.json("http://172.24.125.183:222/api/Default/GetByName?Name=" + name + "&CategoryType=" + type + "", function (error, data) {
                if (error) {
                    throw error;
                }

                xScale.domain(data.map(function (d) { return d.DateOfTest; }));
                yScale.domain([0, d3.max(data, function (d) { return d.Mark; })]);

                g.append("g")
                 .attr("transform", "translate(0," + height + ")")
                 .call(d3.axisBottom(xScale))
                 .append("text")
                 .attr("y", height - 250)
                 .attr("x", width - 100)
                 .attr("text-anchor", "end")
                 .attr("font-size", "20px")
                 .attr("stroke", "black")
                 .text("Date");

                g.append("g")
                 .call(d3.axisLeft(yScale).tickFormat(function (d) {
                     return d;
                 })
                 .ticks(10))
                 .append("text")
                 .attr("transform", "rotate(-90)")
                 .attr("y", 6)
                 .attr("dy", "-5.1em")
                 .attr("text-anchor", "end")
                 .attr("font-size", "18px")
                 .attr("stroke", "black")
                 .text("English Test Marks for" + type);

                g.selectAll(".bar")
                 .data(data)
                 .enter().append('g').attr('class', 'BarGraphe').append("rect")
                 .attr("class", "bar")
                 .attr("x", function (d) { return xScale(d.DateOfTest); })
                 .attr("y", function (d) { return yScale(d.Mark); })
                 .attr("width", xScale.bandwidth())
                 .attr("height", function (d) { return height - yScale(d.Mark); });

                d3.selectAll(".BarGraphe")
                 .append("text")
                 .transition()
                 .duration(800)
                 .text(function (d) { return '' + d.Mark; })
                 .attr("x", function (d) { return xScale(d.DateOfTest) + xScale.bandwidth() / 5; })
                 .attr("y", function (d) { return yScale(d.Mark) - 10; })
                 .delay(function (d, i) { console.log(i); return (i * 100) });
            });
        }

    </script>
</head>
